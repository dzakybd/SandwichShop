<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kpl.sandwichshop">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.SandwichActivity" android:label="Build sandwich">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.MainActivity" />
        <activity android:name=".activities.AdditionalActivity" />
        <activity android:name=".activities.BonusActivity" />
        <activity android:name=".activities.PaymentActivity" />
        <activity android:name=".activities.AddFillingActivity" android:label="Add filling"></activity>
    </application>

</manifest>